#!/usr/bin/env bash

set -e

if [ "${APP_IDENTITY_RUN_MIGRATIONS}" = "1" ]
then
    bin/console doctrine:database:create \
        --connection=identity \
        --if-not-exists
    bin/console doctrine:migrations:migrate \
        --configuration=config/identity/migrations.yml \
        --conn=identity \
        --allow-no-migration \
        --no-interaction
fi
