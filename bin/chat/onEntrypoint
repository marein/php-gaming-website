#!/usr/bin/env bash

set -e

if [ "${APP_CHAT_RUN_MIGRATIONS}" = "1" ]
then
    bin/console doctrine:database:create \
        --connection=chat \
        --if-not-exists
    bin/console doctrine:migrations:migrate \
        --configuration=config/chat/migrations.yml \
        --conn=chat \
        --allow-no-migration \
        --no-interaction
fi
