<tic-tac-toe-animated-game class="card gp-ttt-game-list">
    <div class="card-body d-flex flex-column">
        <h3 class="card-title">Tic Tac Toe</h3>
        <div class="flex-fill align-content-end w-50 align-self-center">
            <div class="gp-ttt-game gp-ttt-game--disabled mb-3">
                <div class="gp-ttt-game__field" data-move="1">
                    <div class="gp-ttt-token-x"></div>
                </div>
                <div class="gp-ttt-game__field" data-move="2">
                    <div class="gp-ttt-token-o"></div>
                </div>
                <div class="gp-ttt-game__field gp-ttt-game__field--highlight" data-move="4" data-win>
                    <div class="gp-ttt-token-o"></div>
                </div>
                <div class="gp-ttt-game__field"></div>
                <div class="gp-ttt-game__field gp-ttt-game__field--highlight" data-move="6" data-win>
                    <div class="gp-ttt-token-o"></div>
                </div>
                <div class="gp-ttt-game__field" data-move="3">
                    <div class="gp-ttt-token-x"></div>
                </div>
                <div class="gp-ttt-game__field gp-ttt-game__field--highlight gp-ttt-game__field--current" data-move="8" data-win>
                    <div class="gp-ttt-token-o"></div>
                </div>
                <div class="gp-ttt-game__field" data-move="7">
                    <div class="gp-ttt-token-x"></div>
                </div>
                <div class="gp-ttt-game__field" data-move="5">
                    <div class="gp-ttt-token-x"></div>
                </div>
            </div>
        </div>
        <p class="flex-fill align-content-end small">
            Place tokens, line them up, and outsmart your opponent.
        </p>
        <a href="{{ path('tic_tac_toe_lobby') }}" class="btn btn-outline-primary">Play</a>
    </div>
</tic-tac-toe-animated-game>
