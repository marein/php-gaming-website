{% extends '@web-interface/layout/base.html.twig' %}

{% set body_class = 'd-flex flex-column' %}

{% block body %}
    <div class="page page-center">
        <div class="container container-tight">
            <p class="text-center fw-medium my-5">
                <a href="{{ path('lobby') }}" class="link-secondary navbar-brand-autodark text-decoration-none">
                    <img src="{{ asset('img/logo.png') }}"
                         alt="Gaming Platform"
                         width="32"
                         height="32"
                         class="navbar-brand-image pe-2"/>
                    Gaming Platform
                </a>
            </p>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-important alert-{{ label }} mb-4">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}{% endblock %}
            <ul class="text-center list-inline list-inline-dots my-5">
                {% include '@web-interface/layout/partial/footer-links.html.twig' %}
            </ul>
        </div>
    </div>
{% endblock %}
