{% extends '@web-interface/layout/base.html.twig' %}

{% block body %}
    <div class="page">
        <header class="navbar navbar-expand d-print-none sticky-top">
            <div class="container-xl">
                <div class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-lg-1">
                    <a href="{{ path('lobby') }}">
                        <img src="{{ asset('img/logo.png') }}"
                             alt="Gaming Platform"
                             width="32"
                             height="32"
                             class="navbar-brand-image"/>
                    </a>
                </div>
                <div class="navbar-nav flex-row order-last">
                    {% if app.user ? app.user.isSignedUp %}
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link d-flex lh-1 text-reset p-0"
                               data-bs-toggle="dropdown">
                                <span class="avatar avatar-sm">{{ app.user.username|slice(0, 2) }}</span>
                                <div class="d-none d-sm-block ps-2">
                                    <div class="small text-secondary">Hi!</div>
                                    <div class="mt-1">{{ app.user.username }}</div>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <a href="{{ path('_logout_main') }}" class="dropdown-item">Logout</a>
                            </div>
                        </div>
                    {% else %}
                        <div class="nav-item">
                            <a href="{{ path('signup') }}" class="nav-link">
                                Sign up
                            </a>
                        </div>
                    {% endif %}
                </div>
                <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
                    <ul class="navbar-nav">
                        <li class="nav-item{{ app.request.attributes.get('_route') == 'lobby' ? ' active' }}">
                            <a class="nav-link" href="{{ path('lobby') }}">
                                <span class="nav-link-icon d-none d-md-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                                         stroke-linejoin="round" class="icon">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M5 12l-2 0l9 -9l9 9l-2 0"></path>
                                        <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                                        <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                                    </svg>
                                </span>
                                <span class="nav-link-title">
                                    Home
                                </span>
                            </a>
                        </li>
                        <li class="nav-item{{ app.request.attributes.get('_route') == 'profile' ? ' active' }}">
                            <a class="nav-link" href="{{ path('profile') }}">
                                <span class="nav-link-icon d-none d-md-block">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                         stroke-linejoin="round" class="icon">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"/>
                                        <path d="M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"/>
                                        <path d="M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855"/>
                                    </svg>
                                </span>
                                <span class="nav-link-title">
                                    Profile
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="page-wrapper">
            <div class="page-body">
                <div class="container">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
        <footer class="footer footer-transparent d-print-none">
            <div class="container-xl">
                <div class="row text-center align-items-center flex-row-reverse">
                    <div class="col-lg-auto ms-lg-auto">
                        <ul class="list-inline list-inline-dots mb-0">
                            {% include '@web-interface/layout/partial/footer-links.html.twig' %}
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}
